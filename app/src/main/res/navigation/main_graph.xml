<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_graph"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/aboutFragment"
        android:name="com.example.habitsTracker.screens.AboutFragment"
        android:label="AboutFragment" />
    <fragment
        android:id="@+id/detailsFragment"
        android:name="com.example.habitsTracker.screens.DetailsFragment"
        android:label="DetailsFragment" >
        <argument
            android:name="args_habit_id"
            app:argType="integer"
            android:defaultValue="-1" />
    </fragment>
    <fragment
        android:id="@+id/listFragment"
        android:name="com.example.habitsTracker.screens.ListFragment"
        android:label="ListFragment" />
    <fragment
        android:id="@+id/mainFragment"
        android:name="com.example.habitsTracker.screens.MainFragment"
        android:label="MainFragment" />
    <fragment
        android:id="@+id/bottomSheetFragment"
        android:name="com.example.habitsTracker.BottomSheetFragment"
        android:label="BottomSheetFragment" />
</navigation>